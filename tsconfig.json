{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "noEmit": true,
        "sourceMap": false,
        "module": "es2015",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/*.test.ts", ".aws-sam"]
}
